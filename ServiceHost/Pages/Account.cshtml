@page
@model ServiceHost.Pages.AccountModel
@{
    ViewData["Title"] = "ورود به ناحیه کاربری";
}
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود و ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ورود - ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }
                                <form method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label asp-for="Login.Username">نام کاربری</label>
                                                <input type="text"  asp-for="Login.Username" placeholder="نام کاربری">
                                                <span asp-validation-for="Login.Username"></span>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="Login.Password">کلمه عبور</label>
                                                <input type="password" asp-for="Login.Password" placeholder="کلمه عبور">
                                                <span asp-validation-for="Login.Password"></span>
                                            </div>

                                            @*<div class="col-sm-6">
                                                    <div class="check-box d-inline-block ml-0 ml-md-2">
                                                        <input type="checkbox" id="remember_me">
                                                        <label for="remember_me">Remember me</label>
                                                    </div>
                                                </div>*@

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link">رمز عبور را فراموش کرده اید؟</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                @if (Model.RegisterMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.RegisterMessage</div>
                                }
                                <form method="post" asp-page="./Account" asp-page-handler="Register">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="RegisterAccount.FullName">نام کامل</label>
                                                <input type="text" asp-for="RegisterAccount.FullName" placeholder="نام کامل">
                                                <span class="text-danger" asp-validation-for="RegisterAccount!.FullName"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="RegisterAccount.Username">نام کاربری</label>
                                                <input type="text" asp-for="RegisterAccount.Username" placeholder="نام کاربری">
                                                <span class="text-danger" asp-validation-for="RegisterAccount.Username"></span>
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label asp-for="RegisterAccount.PhoneNumber">موبایل</label>
                                                <input type="tel" asp-for="RegisterAccount.PhoneNumber" placeholder="09123456789" >
                                                <span class="text-danger" asp-validation-for="RegisterAccount.PhoneNumber"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="RegisterAccount.Password"> کلمه عبور</label>
                                                <input type="password" asp-for="RegisterAccount.Password"  placeholder="کلمه عبور">
                                                <span class="text-danger" asp-validation-for="RegisterAccount.Password"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label asp-for="RegisterAccount.ConfirmPassword">تایید کلمه عبور</label>
                                                <input type="password" asp-for="RegisterAccount.ConfirmPassword" placeholder=" تایید کلمه عبور">
                                                <span class="text-danger" asp-validation-for="RegisterAccount.ConfirmPassword"></span>
                                            </div>
                                            <div class="col-12">
                                                <button type="submit" class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
